<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".LessonStudent">

    <TextView
        android:id="@+id/tv1_lesson_student"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="学生签到"
        android:background="@color/colorBlueThem"
        android:textSize="25dp"
        android:textAlignment="center"
        android:textColor="@color/qmui_config_color_white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
        android:id="@+id/qrbtn_lesson_student_check"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:text="签到"
        android:textColor="@color/qmui_config_color_white"
        app:layout_constraintBottom_toTopOf="@+id/qrbtn_lesson_student_select"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv1_lesson_student"
        app:qmui_backgroundColor="@color/colorBlueThem" />

    <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
        android:id="@+id/qrbtn_lesson_student_select"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:text="加入"
        android:textColor="@color/qmui_config_color_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv1_lesson_student"
        app:qmui_backgroundColor="@color/colorBlueThem"/>

</androidx.constraintlayout.widget.ConstraintLayout>